<DashboardScreen>:
    transactions_container: transactions_container
    
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 10, 20, 10]
        spacing: 15
        
        # Header
        BoxLayout:
            size_hint_y: 0.08
            padding: [0, 5]
            
            Label:
                text: 'Expense Tracker'
                font_size: '24sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
        
        # Balance Card
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.25
            padding: [20, 15]
            spacing: 5
            canvas.before:
                Color:
                    rgba: 0.18, 0.8, 0.44, 1  # Primary green
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15,]
            
            Label:
                text: 'Total Balance'
                color: 1, 1, 1, 0.9
                font_size: '16sp'
                bold: True
                size_hint_y: 0.4
                
            Label:
                text: root.balance
                color: 1, 1, 1, 1
                font_size: '32sp'
                bold: True
                size_hint_y: 0.6
        
        # Income/Expense Summary
        BoxLayout:
            size_hint_y: 0.14
            spacing: 15
            
            # Income Card
            BoxLayout:
                orientation: 'vertical'
                padding: [15, 10]
                spacing: 5
                canvas.before:
                    Color:
                        rgba: 0.96, 0.98, 0.98, 1  # Light gray
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12,]
                
                Label:
                    text: 'Income'
                    color: 0.4, 0.4, 0.4, 1
                    font_size: '14sp'
                    size_hint_y: 0.4
                    
                Label:
                    text: root.income
                    color: 0.3, 0.8, 0.3, 1  # Green
                    font_size: '18sp'
                    bold: True
                    size_hint_y: 0.6
            
            # Expense Card
            BoxLayout:
                orientation: 'vertical'
                padding: [15, 10]
                spacing: 5
                canvas.before:
                    Color:
                        rgba: 0.96, 0.98, 0.98, 1  # Light gray
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12,]
                
                Label:
                    text: 'Expense'
                    color: 0.4, 0.4, 0.4, 1
                    font_size: '14sp'
                    size_hint_y: 0.4
                    
                Label:
                    text: root.expense
                    color: 0.9, 0.3, 0.3, 1  # Red
                    font_size: '18sp'
                    bold: True
                    size_hint_y: 0.6
        
        # Recent Transactions Header
        BoxLayout:
            size_hint_y: 0.08
            padding: [0, 5]
            
            Label:
                text: 'Recent Transactions'
                font_size: '18sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                size_hint_x: 0.7
                
            Button:
                text: 'View All'
                size_hint_x: 0.3
                background_color: 0, 0, 0, 0
                color: 0.18, 0.8, 0.44, 1  # Primary green
                font_size: '14sp'
                on_press: root.view_transactions()
        
        # Transactions List
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.4
            canvas.before:
                Color:
                    rgba: 0.98, 0.98, 0.98, 1  # Light gray background
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
            
            ScrollView:
                size_hint: 1, 1
                bar_width: 4
                bar_color: 0.7, 0.7, 0.7, 1
                bar_inactive_color: 0.7, 0.7, 0.7, 0.5
                effect_cls: 'ScrollEffect'
                scroll_type: ['bars', 'content']
                do_scroll_x: False
                
                BoxLayout:
                    id: transactions_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 8
                    padding: [10, 10, 10, 10]
        
        # Add Transaction Button
        BoxLayout:
            size_hint_y: 0.1
            padding: [0, 5, 0, 5]
            
            Button:
                text: 'Add New Transaction'
                font_size: '16sp'
                bold: True
                background_color: 0.18, 0.8, 0.44, 1  # Primary green
                color: 1, 1, 1, 1
                on_press: root.add_transaction()
                canvas.before:
                    Color:
                        rgba: 0.15, 0.7, 0.38, 1  # Slightly darker green for shadow
                    RoundedRectangle:
                        pos: self.x, self.y - 2
                        size: self.width, self.height
                        radius: [25,]
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [25,]

<TransactionItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 60
    padding: [15, 5]
    spacing: 15
    
    canvas.before:
        Color:
            rgba: 0.96, 0.98, 0.98, 1  # Light gray
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12,]
    
    # Icon
    Label:
        text: 'ðŸ’°' if root.transaction_type == 'income' else 'ðŸ’¸'
        font_size: '24sp'
        size_hint_x: 0.1
        
    # Transaction Details
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        spacing: 2
        
        Label:
            text: root.category
            font_size: '16sp'
            bold: True
            halign: 'left'
            text_size: self.width, None
            color: 0.2, 0.2, 0.2, 1
            
        Label:
            text: root.date + (' - ' + root.description if root.description else '')
            font_size: '12sp'
            color: 0.5, 0.5, 0.5, 1
            halign: 'left'
            text_size: self.width, None
            valign: 'top'
            size_hint_y: 0.7
    
    # Amount
    Label:
        text: f'+â‚¹{root.amount}' if root.transaction_type == 'income' else f'-â‚¹{root.amount}'
        font_size: '16sp'
        bold: True
        color: (0.3, 0.8, 0.3, 1) if root.transaction_type == 'income' else (0.9, 0.3, 0.3, 1)
        size_hint_x: 0.3
        halign: 'right'
        valign: 'middle'
